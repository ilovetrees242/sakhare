#!/bin/sh
LFSPKGNAME="which"
LFSPKGVERSION="2.23"
LFSPKG="$LFSPKGNAME-$LFSPKGVERSION"
LFSPKGREPO="https://ilovetrees242.github.io/DevHelp/Website/Packages"
DEPENDS="bash glibc"
case $1 in
	chkdep)
		bash --version
		if [ $? -ne 0]; then
			echo "Dependency bash not found!"
			exit 1
		fi
		ldd --version
		if [ $? -ne 0]; then
			echo "Dependency glibc not found!"
			exit 1
		fi
	;;
	build)
		tar xvf $LFSPKG.tar.?z
		pushd $LFSPKG
			./configure --prefix=/usr 
			make
			make install
		popd
		rm -rf $LFSPKGNAME
	;;
	uninstall)
		rm /usr/bin/which
		rm -rf /usr/share/man/man1/which.1
	;;
esac
