#!/bin/sh
LFSPKGNAME="which"
LFSPKGVERSION="2.23"
LFSPKG="$LFSPKGNAME-$LFSPKGVERSION"
LFSPKGREPO="https://ilovetrees242.github.io/DevHelp/Website/Packages"

case $1 in
	build)
		wget $LFSPKGREPO/$LFSPKG.tar.?z
		tar xvf $LFSPKG.tar.?z
		pushd $LFSPKG
			./configure --prefix=/usr 
			make
			make install
		popd
		rm -rf $LFSPKG*
	;;
	uninstall)
		rm /usr/bin/which
		rm -rf /usr/share/man/man1/which.1
	;;
esac
